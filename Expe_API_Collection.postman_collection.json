    },
    {
      "name": "Currency",
      "item": [
        {
          "name": "Get All Countries",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/currency/countries",
              "host": ["{{baseUrl}}"],
              "path": ["currency", "countries"]
            },
            "description": "Get list of all countries with currencies"
          }
        },
        {
          "name": "Convert Currency",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/currency/convert?from=EUR&to=USD&amount=100",
              "host": ["{{baseUrl}}"],
              "path": ["currency", "convert"],
              "query": [
                {
                  "key": "from",
                  "value": "EUR"
                },
                {
                  "key": "to",
                  "value": "USD"
                },
                {
                  "key": "amount",
                  "value": "100"
                }
              ]
            },
            "description": "Convert amount from one currency to another"
          }
        }
      ]
    }
  ]
}
