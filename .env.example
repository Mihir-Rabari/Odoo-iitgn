# Minimal env for VM with external Postgres & Redis

# Backend
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://YOUR_VM_IP:8080

# Database (external)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/expe_db

# Redis (external)
REDIS_URL=redis://HOST:6379

# Auth
JWT_SECRET=change_this_to_a_random_long_string
JWT_EXPIRES_IN=7d

# File Uploads
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Optional APIs
GEMINI_API_KEY=
EXCHANGE_RATE_API_KEY=

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@expe.com

# Frontend build arg (handled via compose build args)
VITE_API_URL=/api
