# Environment variables for PM2 deployment

# Backend
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://YOUR_VM_IP:5173

# Database (Docker localhost)
DATABASE_URL=postgresql://expe_user:expe_password@localhost:5432/expe_db

# Redis (Docker localhost)
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=change_this_to_a_random_long_string
JWT_EXPIRES_IN=7d

# File Uploads (local directory)
UPLOAD_PATH=./backend/uploads
MAX_FILE_SIZE=10485760

# Optional APIs
GEMINI_API_KEY=
EXCHANGE_RATE_API_KEY=

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@expe.com
